{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build mkndaq",
            "type": "shell",
            "command": "PS pyinstaller",
            "args": [
                "--onefile",
                "--name mkndaq.exe",
                "mkndaq/mkndaq.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}